// documentation: https://zed.dev/docs/configuring-zed
{
    "theme": {
        "mode": "system",
        "light": "ZedHacker Monochrome",
        "dark": "VX Desert Mocha (Blur) [Light]"
    },
    "base_keymap": "VSCode",
    "icon_theme": "Soft Charmed Icons",
    "edit_predictions": {
        "mode": "eager"
    },
    "agent": {
        "play_sound_when_agent_done": true,
        "model_parameters": []
    },
    "features": {
        "edit_prediction_provider": "zed"
    },
    "collaboration_panel": {
        "button": false,
        "dock": null
    },
    "show_whitespaces": "boundary",
    "indent_guides": {
        "enabled": true,
        "active_line_width": 4
    },
    "inlay_hints": {
        "enabled": true,
        "show_value_hints": true,
        "show_type_hints": true,
        "show_parameter_hints": true,
        "show_other_hints": true,
        "show_background": false,
        "edit_debounce_ms": 200,
        "scroll_debounce_ms": 50,
        "toggle_on_modifiers_press": {
            "control": false,
            "alt": true,
            "shift": false,
            "platform": false,
            "function": false
        }
    },
    "buffer_font_family": "JetBrainsMono Nerd Font Propo",
    "ui_font_family": ".SystemUIFont",
    "max_tabs": 16,
    "use_system_path_prompts": false,
    "restore_on_file_reopen": true,
    "autosave": "on_focus_change",
    "file_types": {
        "csv (semicolon)": ["*.csv"],
        "env": ["*{.env*,.keys*}", "*{*.env}"],
        "css": ["$THEME/vs-custom.css", "*.css"],
        "ignore": ["*{.fdignore,.rgignore,**ignore**}", ".gitignore", ".getcode"],
        "plaintext": ["defaults.*", "*.txt"],
        "jsonc": ["*{.json,.jsonc,*.windsurf.json}"],
        "properties": ["**/osx/custom-*.txt"],
        "toml": ["*.toml", "config"],
        "shellscript": ["*{.zsh,.env.zsh}", "*{*zsh*}", "*zsh*", ".shellcheckrc"],
        "yaml": ["*.yml", "*.yaml"],
        "typescriptreact": ["*.tsx"],
        "dockercompose": ["docker-compose.yml"]
    },
    "completions": {
        "words": "enabled",
        "words_min_length": 5,
        "lsp": true,
        "lsp_fetch_timeout_ms": 5000,
        "lsp_insert_mode": "replace_suffix"
    },
    "linked_edits": true,
    "use_on_type_format": true,
    "show_edit_predictions": true,
    "preferred_line_length": 100,
    "soft_wrap": "none",
    "hard_tabs": false,
    "tab_size": 4,
    "telemetry": {
        "metrics": false,
        "diagnostics": false
    },
    "tabs": {
        "show_close_button": "hidden",
        "git_status": true
    },
    "auto_update": true,
    "file_scan_inclusions": [
        "/Users/risenowrise/syn/**",
        "/Users/risenowrise/.claude/**",
        "/Users/risenowrise/cc/**",
        "/Users/risenowrise/vx/**"
    ],
    "preview_tabs": {
        "enable_preview_from_code_navigation": true,
        "enable_preview_from_file_finder": true
    },
    "terminal": {
        "copy_on_select": true,
        "blinking": "on",
        "cursor_shape": "bar",
        "line_height": {
            "custom": 1.15
        },
        "font_family": "JetBrainsMono Nerd Font",
        "font_size": 11.0
    },
    "project_panel": {
        "dock": "left",
        "auto_fold_dirs": false,
        "auto_reveal_entries": false
    },
    "search": {
        "button": false,
        "whole_word": false,
        "case_sensitive": false,
        "include_ignored": false,
        "regex": false
    },
    "use_smartcase_search": true,
    "fast_scroll_sensitivity": 16.0,
    "vertical_scroll_margin": 12.0,
    "scroll_beyond_last_line": "off",
    "gutter": {
        "folds": true,
        "line_numbers": true
    },
    "minimap": {
        "show": "always",
        "current_line_highlight": "all",
        "display_in": "active_editor",
        "thumb_border": "left_open",
        "max_width_columns": 60
    },
    "hover_popover_delay": 100,
    "selection_highlight": true,
    "rounded_selection": true,
    "current_line_highlight": "all",
    "cursor_shape": "bar",
    "cursor_blink": true,
    "outline_panel": {
        "git_status": true,
        "folder_icons": true,
        "button": false,
        "expand_outlines_with_depth": 12,
        "file_icons": true,
        "dock": "right",
        "auto_reveal_entries": true,
        "auto_fold_dirs": true
    },
    "buffer_font_weight": 100.0,

    "vim_mode": false
}
