// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
	"features": {
		"edit_prediction_provider": "none"
	},
	"collaboration_panel": {
		"dock": "left"
	},
	"agent_servers": {},
	"show_whitespaces": "boundary",
	"indent_guides": {
		"enabled": true
	},
	"disable_ai": false,
	"inlay_hints": {
		"enabled": true,
		"show_value_hints": true,
		"show_type_hints": true,
		"show_parameter_hints": true,
		"show_other_hints": true,
		"show_background": false,
		"edit_debounce_ms": 400,
		"scroll_debounce_ms": 50,
		"toggle_on_modifiers_press": {
			"control": false,
			"alt": true,
			"shift": false,
			"platform": false,
			"function": false
		}
	},
	"buffer_font_family": ".ZedMono",
	"ui_font_family": ".SystemUIFont",
	"max_tabs": 20,
	"use_system_path_prompts": false,
	"restore_on_file_reopen": true,
	"autosave": "on_focus_change",
	"file_types": {
		"csv (semicolon)": ["*.csv"],
		"env": ["*{.env*,.keys*}", "*{*.env}"],
		"css": ["$THEME/vs-custom.css", "*.css"],
		"ignore": ["*{.fdignore,.rgignore,**ignore**}", ".gitignore", ".getcode"],
		"plaintext": ["defaults.*", "*.txt"],
		"jsonc": ["*{.json,.jsonc,*.windsurf.json}"],
		"properties": ["**/osx/custom-*.txt"],
		"toml": ["*.toml", "config"],
		"shellscript": ["*{.zsh,.env.zsh}", "*{*zsh*}", "*zsh*", ".shellcheckrc"],
		"yaml": ["*.yml", "*.yaml"],
		"typescriptreact": ["*.tsx"],
		"dockercompose": ["docker-compose.yml"]
	},
	"completions": {
		"words": "disabled",
		"words_min_length": 3,
		"lsp": true,
		"lsp_fetch_timeout_ms": 5000,
		"lsp_insert_mode": "replace_suffix"
	},
	"linked_edits": true,
	"use_on_type_format": true,
	"show_edit_predictions": true,
	"preferred_line_length": 100,
	"soft_wrap": "none",
	"hard_tabs": true,
	"tab_size": 4,
	"telemetry": {
		"metrics": false,
		"diagnostics": false
	},
	"tabs": {
		"show_close_button": "hidden",
		"git_status": true
	},
	"auto_update": true,
	"file_scan_inclusions": [
		"/Users/risenowrise/syn/**",
		"/Users/risenowrise/.claude/**",
		"/Users/risenowrise/cc/**",
		"/Users/risenowrise/vx/**"
	],
	"preview_tabs": {
		"enable_preview_from_code_navigation": true,
		"enable_preview_from_file_finder": true
	},
	"terminal": {
		"copy_on_select": true,
		"blinking": "on",
		"cursor_shape": "bar",
		"line_height": {
			"custom": 1.15
		},
		"font_family": "JetBrainsMono Nerd Font",
		"font_size": 11.0
	},
	"project_panel": {
		"auto_fold_dirs": false,
		"auto_reveal_entries": false
	},
	"search": {
		"button": false,
		"whole_word": false,
		"case_sensitive": false,
		"include_ignored": false,
		"regex": false
	},
	"use_smartcase_search": true,
	"fast_scroll_sensitivity": 16.0,
	"vertical_scroll_margin": 12.0,
	"scroll_beyond_last_line": "off",
	"gutter": {
		"folds": true,
		"line_numbers": true
	},
	"minimap": {
		"show": "auto",
		"thumb": "always"
	},
	"hover_popover_delay": 700,
	"selection_highlight": true,
	"current_line_highlight": "all",
	"cursor_shape": "bar",
	"cursor_blink": true,
	"outline_panel": {
		"git_status": true
	},
	"buffer_font_weight": 100.0,
	"base_keymap": "VSCode",
	"vim_mode": false,
	"ui_font_size": 18.0,
	"buffer_font_size": 14.0,
	"theme": {
		"mode": "system",
		"light": "Catppuccin Latte (Blur) [Light]",
		"dark": "Catppuccin Mocha (Blur) [Light]"
	}
}
