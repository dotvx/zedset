// @https://zed.dev/docs/key-bindings
// @https://zed.dev/docs/all-actions
//
[
    {
        // vim mode
        "context": "Editor && vim_mode == insert",
        "bindings": {
            // "j k": "vim::NormalBefore"
        }
    },
    {
        "context": "Editor",
        "bindings": {
            "shift shift": "editor::ToggleFold",
            "cmd-d": "workspace::NewFileSplitVertical",
            "alt-u a": "search::SelectPreviousMatch",
            "alt-d": "search::SelectNextMatch",
            "alt-x": "editor::DeleteLine"
        }
    },
    {
        "bindings": {
            "ctrl-!": "zed::OpenKeymap",
            "ctrl-@": "zed::OpenKeymapFile",
            "ctrl-#": "zed::OpenSettings",
            "ctrl-$": "zed::OpenSettingsFile",
            "ctrl-%": [
                "task::Spawn",
                {
                    "task_name": "Open Themes"
                }
            ],
            "ctrl-^": [
                "task::Spawn",
                {
                    "task_name": "Open Configs"
                }
            ],
            "ctrl-)": "zed::OpenTasks",
            "ctrl-)": "zed::Extensions",
            "ctrl-_": "zed::OpenDefaultKeymap",
            "ctrl-+": "zed::OpenDefaultSettings"
        }
    },
    {
        "bindings": {
            "alt-s": "editor::SortLinesCaseInsensitive",
            "alt-shift-s": "editor::SortLinesByLength",
            "ctrl-R": "workspace::Reload"
        }
    },
    {
        "context": "Workspace",
        "bindings": {
            "cmd-shift-d": null
        }
    },
    {
        "context": "Editor",
        "bindings": {
            "cmd-k ctrl-cmd-d": null
        }
    },
    {
        "context": "Editor",
        "bindings": {
            "ctrl-cmd-d": null
        }
    },
    {
        "context": "Editor",
        "bindings": {
            "cmd-k cmd-d": null
        }
    },
    {
        "bindings": {
            "cmd-j": "workspace::NewCenterTerminal"
        }
    },
    {
        "bindings": {
            "cmd-shift-c": null
        }
    },
    {
        "context": "Editor",
        "bindings": {
            "cmd-shift-c": "workspace::CopyPath"
        }
    },
    {
        "context": "ProjectPanel",
        "bindings": {
            "cmd-shift-c": "workspace::CopyPath"
        }
    },
    {
        "bindings": {
            "cmd-shift-d": "workspace::NewFileSplitHorizontal"
        }
    },
    {
        "context": "Editor",
        "bindings": {
            "alt-`": "editor::MoveToEnclosingBracket"
        }
    },
    {
        "bindings": {
            "alt-f": "editor::FormatSelections"
        }
    },
    {
        "bindings": {
            "alt-cmd-h": null
        }
    },
    {
        "context": "(Editor && extension == md)",
        "bindings": {
            "ctrl-shift-p": "markdown::OpenPreview"
        }
    },
    {
        "context": "Workspace",
        "bindings": {
            "ctrl-alt-cmd-p": null
        }
    },
    {
        "context": "(Editor && extension == md)",
        "bindings": {
            "alt-p": "markdown::OpenPreviewToTheSide"
        }
    },
    {
        "context": "(Editor && extension == svg)",
        "bindings": {
            "alt-p": "svg::OpenPreviewToTheSide"
        }
    },
    {
        "context": "(Editor && extension == svg)",
        "bindings": {
            "cmd-k v": null
        }
    },
    {
        "context": "(Editor && extension == md)",
        "bindings": {
            "cmd-k v": null
        }
    },
    {
        "context": "(Editor && extension == svg)",
        "bindings": {
            "alt-shift-p": "svg::OpenPreview"
        }
    },
    {
        "context": "(Editor && extension == svg)",
        "bindings": {
            "cmd-shift-v": null
        }
    },
    {
        "context": "(Editor && extension == md)",
        "bindings": {
            "cmd-shift-v": null
        }
    },
    {
        "bindings": {
            "cmd-k p": "dev::OpenThemePreview"
        }
    },
    {
        "context": "(Editor && extension == md)",
        "bindings": {
            "cmd-shift-v": null
        }
    },
    {
        "bindings": {
            "cmd-k shift-p": "dev::OpenSyntaxTreeView"
        }
    },
    {
        "bindings": {
            "cmd-`": "editor::ToggleMinimap"
        }
    },
    {
        "context": "Workspace",
        "bindings": {
            "cmd-b": "workspace::ToggleLeftDock",
            "cmd-escape": "workspace::ToggleLeftDock"
        }
    },
    {
        "bindings": {
            "ctrl-cmd-f": "search::CycleMode"
        }
    },
    {
        "context": "BufferSearchBar",
        "bindings": {
            "cmd-f": "search::ToggleReplace"
        }
    },
    {
        "bindings": {
            "ctrl-alt-cmd-f": null
        }
    },
    {
        "context": "BufferSearchBar",
        "bindings": {
            "alt-cmd-f": null
        }
    },
    {
        "context": "BufferSearchBar",
        "bindings": {
            "alt-cmd-f": "search::ToggleSelection"
        }
    },
    {
        "bindings": {
            "fn-f": null
        }
    },
    {
        "bindings": {
            "ctrl-cmd-f": null
        }
    },
    {
        "context": "ProjectPanel",
        "bindings": {
            "escape": "project_panel::CollapseAllEntries"
        }
    },
    {
      "context": "Workspace",
      "bindings": {
        "cmd-5": null
      }
    }
]
