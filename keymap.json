// @https://zed.dev/docs/key-bindings
// @https://zed.dev/docs/all-actions
//
[
	{
		// vim mode
		"context": "Editor && vim_mode == insert",
		"bindings": {
			// "j k": "vim::NormalBefore"
		}
	},
	{
		"context": "Editor",
		"bindings": {
			"shift shift": "editor::ToggleFold",
			"alt-a": "search::SelectPreviousMatch",
			"alt-d": "search::SelectNextMatch",
			"alt-x": "editor::DeleteLine"
		}
	},
	{
		"bindings": {
			"cmd-shift-r": "workspace::Reload",
			"cmd-shift-1": "zed::OpenKeymapEditor",
			"cmd-shift-2": "zed::OpenSettings",
			"cmd-shift-3": "zed::OpenKeymap",
			"cmd-shift-4": "zed::OpenTasks",
			"cmd-shift-5": "zed::OpenDefaultSettings",
			"cmd-shift-6": "zed::OpenDefaultKeymap",
			"cmd-shift-7": "zed::Extensions"
		}
	},
	{
		"bindings": {
			"alt-s": "editor::SortLinesCaseInsensitive",
			"alt-shift-s": "editor::SortLinesByLength",
			"cmd-d": "workspace::NewFileSplitVertical",
			"cmd-shift-c": "workspace::CopyPath"
		}
	}
]
