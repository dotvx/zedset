[
	{
		// vim mode
		"context": "Editor && vim_mode == insert",
		"bindings": {
			// "j k": "vim::NormalBefore"
		}
	},

	{
		"context": "Editor",
		"bindings": {
			"cmd-shift-c": "workspace::CopyPath",
			"alt-alt-a": "search::SelectPreviousMatch",
			"alt-d": "search::SelectNextMatch",
			"shift shift": "editor::ToggleFold"
		}
	},
	{
		"bindings": {
			"cmd-ctrl-alt-r": "workspace::Reload",
			"ctrl-shift-4": "zed::OpenDefaultSettings",
			"ctrl-shift-6": [
				"task::Spawn",
				{
					"command": "xo",
					"args": ["/Users/risenowrise/v/fish/infra.yaml"]
				}
			]
		}
	},
	{
		"bindings": {
			"ctrl-!": "zed::OpenKeymapEditor"
		}
	},
	{
		"bindings": {
			"ctrl-ยง": "zed::OpenSettings"
		}
	},
	{
		"bindings": {
			"ctrl-\"": "zed::OpenKeymap"
		}
	},
	{
		"bindings": {
			"ctrl-shift-5": "zed::OpenDefaultKeymap"
		}
	},
	{
		"bindings": {
			"ctrl-&": "zed::Extensions"
		}
	},
	{
		"context": "Editor",
		"bindings": {
			"alt-x": "editor::DeleteLine"
		}
	},

	{
		"context": "Editor",
		"bindings": {
			"cmd-d": "workspace::NewFileSplitVertical"
		}
	},
 {
   "bindings": {
     "ctrl-$": "zed::OpenTasks"
   }
 },
 {
   "context": "Editor",
    "bindings": {
     "alt-s": "editor::SortLinesCaseInsensitive"
   }
 },
 {
   "context": "Editor",
    "bindings": {
     "alt-shift-s": "editor::SortLinesByLength"
   }
 }
]
